@page "/design-system"
@{
    ViewData["Title"] = "Design System Showcase";
}

<div class="design-system-showcase">
    <div class="mat-page-header">
        <h1>Deepin Material Design System</h1>
        <p class="lead">A comprehensive design system showcase</p>
    </div>

    <!-- Colors Section -->
    <div class="mat-section">
        <h2>Color Palette</h2>
        <div class="row">
            <div class="col-md-3 mb-3">
                <div class="card mat-card">
                    <div class="card-body text-center" style="background-color: var(--primary); color: white;">
                        <h5>Primary</h5>
                        <small>#1976d2</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card mat-card">
                    <div class="card-body text-center" style="background-color: var(--accent); color: white;">
                        <h5>Accent</h5>
                        <small>#ff4081</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card mat-card">
                    <div class="card-body text-center" style="background-color: var(--warn); color: white;">
                        <h5>Warning</h5>
                        <small>#f44336</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card mat-card">
                    <div class="card-body text-center" style="background-color: var(--surface); border: 1px solid var(--outline);">
                        <h5>Surface</h5>
                        <small>#ffffff</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Buttons Section -->
    <div class="mat-section">
        <h2>Buttons</h2>
        <div class="row">
            <div class="col-md-6">
                <h4>Button Types</h4>
                <div class="d-flex flex-wrap gap-2 mb-3">
                    <button class="btn mat-button mat-button-primary">
                        <span class="material-icons me-1">check</span>
                        Primary
                    </button>
                    <button class="btn mat-button mat-button-secondary">Secondary</button>
                    <button class="btn mat-button mat-button-outline">Outline</button>
                    <button class="btn mat-button mat-button-text">Text</button>
                    <button class="btn mat-button mat-button-danger">Danger</button>
                </div>
            </div>
            <div class="col-md-6">
                <h4>Floating Action Button</h4>
                <button class="btn mat-fab me-3">
                    <span class="material-icons">add</span>
                </button>
                <button class="btn mat-fab" style="background-color: var(--accent) !important;">
                    <span class="material-icons">favorite</span>
                </button>
            </div>
        </div>
    </div>

    <!-- Form Elements Section -->
    <div class="mat-section">
        <h2>Form Elements</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="mat-form-field">
                    <label class="form-label">Text Input</label>
                    <input class="form-control" placeholder="Enter text here" type="text">
                </div>
                <div class="mat-form-field">
                    <label class="form-label">Email Input</label>
                    <input class="form-control" placeholder="email@example.com" type="email">
                </div>
                <div class="mat-checkbox">
                    <input class="form-check-input" type="checkbox" id="demo-checkbox">
                    <label class="form-check-label" for="demo-checkbox">
                        I agree to the terms and conditions
                    </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mat-form-field">
                    <label class="form-label">Password Input</label>
                    <input class="form-control" placeholder="Enter password" type="password">
                </div>
                <div class="mat-form-field">
                    <label class="form-label">Textarea</label>
                    <textarea class="form-control" rows="3" placeholder="Enter your message"></textarea>
                </div>
            </div>
        </div>
    </div>

    <!-- Cards Section -->
    <div class="mat-section">
        <h2>Cards</h2>
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="card mat-card">
                    <div class="card-header">
                        <h5>Basic Card</h5>
                    </div>
                    <div class="card-body">
                        <p class="mat-text-muted">This is a basic card with standard elevation.</p>
                        <button class="btn mat-button mat-button-primary">Action</button>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card mat-card mat-card-elevated">
                    <div class="card-header">
                        <h5>Elevated Card</h5>
                    </div>
                    <div class="card-body">
                        <p class="mat-text-muted">This card has elevated shadow for emphasis.</p>
                        <button class="btn mat-button mat-button-outline">Learn More</button>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card mat-card">
                    <div class="card-body">
                        <div class="text-center">
                            <span class="material-icons mb-2" style="font-size: 48px; color: var(--primary);">account_circle</span>
                            <h5>User Profile</h5>
                            <p class="mat-text-muted">Manage your account settings</p>
                            <button class="btn mat-button mat-button-secondary">Settings</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Alerts Section -->
    <div class="mat-section">
        <h2>Alerts</h2>
        <div class="alert mat-alert mat-alert-success">
            <span class="material-icons me-2">check_circle</span>
            <strong>Success!</strong> Your account has been created successfully.
        </div>
        <div class="alert mat-alert mat-alert-info">
            <span class="material-icons me-2">info</span>
            <strong>Information:</strong> Please check your email for verification.
        </div>
        <div class="alert mat-alert mat-alert-warning">
            <span class="material-icons me-2">warning</span>
            <strong>Warning:</strong> Your session will expire in 5 minutes.
        </div>
        <div class="alert mat-alert mat-alert-danger">
            <span class="material-icons me-2">error</span>
            <strong>Error:</strong> Invalid username or password.
        </div>
    </div>

    <!-- Lists Section -->
    <div class="mat-section">
        <h2>Lists</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="mat-list">
                    <a href="#" class="mat-list-item">
                        <span class="material-icons me-3">home</span>
                        <div>
                            <strong>Dashboard</strong>
                            <div class="mat-text-muted">Overview of your account</div>
                        </div>
                    </a>
                    <a href="#" class="mat-list-item">
                        <span class="material-icons me-3">person</span>
                        <div>
                            <strong>Profile</strong>
                            <div class="mat-text-muted">Manage your personal information</div>
                        </div>
                    </a>
                    <a href="#" class="mat-list-item">
                        <span class="material-icons me-3">settings</span>
                        <div>
                            <strong>Settings</strong>
                            <div class="mat-text-muted">Configure your preferences</div>
                        </div>
                    </a>
                    <a href="#" class="mat-list-item">
                        <span class="material-icons me-3">logout</span>
                        <div>
                            <strong>Sign Out</strong>
                            <div class="mat-text-muted">End your current session</div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <h4>Elevation Examples</h4>
                <div class="mb-3 p-3 mat-elevation-0" style="background: white; border: 1px solid var(--outline);">
                    Elevation 0 - No shadow
                </div>
                <div class="mb-3 p-3 mat-elevation-1" style="background: white;">
                    Elevation 1 - Light shadow
                </div>
                <div class="mb-3 p-3 mat-elevation-2" style="background: white;">
                    Elevation 2 - Medium shadow
                </div>
                <div class="mb-3 p-3 mat-elevation-3" style="background: white;">
                    Elevation 3 - Strong shadow
                </div>
                <div class="mb-3 p-3 mat-elevation-4" style="background: white;">
                    Elevation 4 - Very strong shadow
                </div>
            </div>
        </div>
    </div>

    <!-- Typography Section -->
    <div class="mat-section">
        <h2>Typography</h2>
        <div class="row">
            <div class="col-md-6">
                <h1>Heading 1 (Display Large)</h1>
                <h2>Heading 2 (Display Medium)</h2>
                <h3>Heading 3 (Display Small)</h3>
                <h4>Heading 4</h4>
                <h5>Heading 5</h5>
                <h6>Heading 6</h6>
            </div>
            <div class="col-md-6">
                <p><strong>Body Large:</strong> This is the main body text used for most content on the page.</p>
                <p>Body Medium: This is slightly smaller body text used for secondary content.</p>
                <p><small class="mat-text-muted">Caption: This is small text used for captions and metadata.</small></p>
                <p class="mat-text-primary">Primary colored text</p>
                <p class="mat-text-muted">Muted secondary text</p>
            </div>
        </div>
    </div>

    <!-- Interactive Demo -->
    <div class="mat-section">
        <h2>Interactive Demo</h2>
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card mat-card mat-card-elevated">
                    <div class="card-header">
                        <h3>
                            <span class="material-icons me-2">science</span>
                            Interactive Form Demo
                        </h3>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mat-form-field">
                                        <label class="form-label">First Name</label>
                                        <input class="form-control" placeholder="Enter first name" type="text">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mat-form-field">
                                        <label class="form-label">Last Name</label>
                                        <input class="form-control" placeholder="Enter last name" type="text">
                                    </div>
                                </div>
                            </div>
                            <div class="mat-form-field">
                                <label class="form-label">Email Address</label>
                                <input class="form-control" placeholder="email@example.com" type="email">
                            </div>
                            <div class="mat-form-field">
                                <label class="form-label">Message</label>
                                <textarea class="form-control" rows="4" placeholder="Enter your message here..."></textarea>
                            </div>
                            <div class="mat-checkbox">
                                <input class="form-check-input" type="checkbox" id="newsletter">
                                <label class="form-check-label" for="newsletter">
                                    Subscribe to newsletter
                                </label>
                            </div>
                            <div class="d-flex gap-2 justify-content-end">
                                <button type="button" class="btn mat-button mat-button-secondary">Cancel</button>
                                <button type="submit" class="btn mat-button mat-button-primary">
                                    <span class="material-icons me-1">send</span>
                                    Submit
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Demo script to show interactive behaviors
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Material Design System Demo Loaded');
            
            // Add click handlers to demo buttons
            document.querySelectorAll('.btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    if (this.type !== 'submit') {
                        e.preventDefault();
                        console.log('Button clicked:', this.textContent.trim());
                    }
                });
            });
        });
    </script>
}
