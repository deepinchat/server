@page
@model Deepin.IdentityServer.Pages.Home.Index

<div class="welcome-page">
    <div class="mat-page-header">
        <h1>
            <span class="material-icons me-2">account_circle</span>
            Welcome to Deepin Identity Server
        </h1>
        <p class="lead">Secure authentication and authorization platform</p>
        <small class="mat-text-muted">Version @Model.Version</small>
    </div>

    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="mat-list">
                <a href="~/.well-known/openid-configuration" class="mat-list-item">
                    <span class="material-icons me-3">article</span>
                    <div>
                        <strong>Discovery Document</strong>
                        <div class="mat-text-muted">View metadata and endpoints</div>
                    </div>
                </a>
                
                <a href="~/diagnostics" class="mat-list-item">
                    <span class="material-icons me-3">bug_report</span>
                    <div>
                        <strong>Current Session</strong>
                        <div class="mat-text-muted">View claims for your current session</div>
                    </div>
                </a>
                
                <a href="~/grants" class="mat-list-item">
                    <span class="material-icons me-3">verified_user</span>
                    <div>
                        <strong>Manage Grants</strong>
                        <div class="mat-text-muted">View and manage stored grants</div>
                    </div>
                </a>
                
                <a href="~/serversidesessions" class="mat-list-item">
                    <span class="material-icons me-3">desktop_windows</span>
                    <div>
                        <strong>Server Sessions</strong>
                        <div class="mat-text-muted">View active server side sessions</div>
                    </div>
                </a>
                
                <a href="~/ciba/all" class="mat-list-item">
                    <span class="material-icons me-3">phone_android</span>
                    <div>
                        <strong>CIBA Requests</strong>
                        <div class="mat-text-muted">View pending CIBA login requests</div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    @if(Model.License != null)
    {
        <div class="mat-section">
            <div class="row">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <div class="card mat-card">
                        <div class="card-header">
                            <h3>
                                <span class="material-icons me-2">license</span>
                                License Information
                            </h3>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Serial Number:</dt>
                                <dd class="col-sm-8">@Model.License.SerialNumber</dd>
                                <dt class="col-sm-4">Expiration:</dt>
                                <dd class="col-sm-8">@Model.License.Expiration!.Value.ToLongDateString()</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
