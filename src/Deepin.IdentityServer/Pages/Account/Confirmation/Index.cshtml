@page
@model Deepin.IdentityServer.Pages.Account.Confirmation.Index

<div class="login-page">
    <div class="lead">
        <h1>Register Confirmation </h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">

        <div class="col-sm-6">
            <form asp-page="/Account/Confirmation/Index">

                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input readonly class="form-control" placeholder="Email" asp-for="Input.Email">
                </div>
                <div class="form-group">
                    <label asp-for="Input.Code"></label>
                    <input type="password" class="form-control" placeholder="Password" asp-for="Input.Code" autofocus
                        autocomplete="off">
                </div>

                <button class="btn btn-primary" name="Input.Button" value="create">Submit</button>
            </form>
        </div>

    </div>
</div>