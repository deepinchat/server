@page
@model Deepin.IdentityServer.Pages.Account.Confirmation.Index

<div class="confirmation-page">
    <div class="mat-page-header">
        <h1>Confirm Your Registration</h1>
        <p class="lead">Please enter the confirmation code sent to your email</p>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7 col-sm-9">
            <div class="card mat-card mat-card-elevated">
                <div class="card-header">
                    <h2>
                        <span class="material-icons me-2">mark_email_read</span>
                        Email Confirmation
                    </h2>
                </div>

                <div class="card-body">
                    <form asp-page="/Account/Confirmation/Index">
                        <input type="hidden" asp-for="Input.ReturnUrl" />
                        
                        <div class="mat-form-field">
                            <label class="form-label" asp-for="Input.Email">Email Address</label>
                            <input readonly class="form-control" asp-for="Input.Email">
                        </div>
                        
                        <div class="mat-form-field">
                            <label class="form-label" asp-for="Input.Code">Confirmation Code</label>
                            <input type="password" class="form-control" placeholder="Enter your confirmation code" 
                                   asp-for="Input.Code" autofocus autocomplete="off">
                            <small class="mat-text-muted">
                                Check your email for the confirmation code we sent you.
                            </small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn mat-button mat-button-primary">
                                <span class="material-icons me-1">verified_user</span>
                                Confirm Account
                            </button>
                        </div>
                    </form>
                </div>
                
                <div class="card-footer text-center">
                    <small class="mat-text-muted">
                        Didn't receive the code? 
                        <a href="#" class="mat-text-primary">Resend confirmation email</a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>