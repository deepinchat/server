@page
@model Deepin.IdentityServer.Pages.Create.Index

<div class="create-account-page">
    <div class="mat-page-header">
        <h1>Create Account</h1>
        <p class="lead">Join the Deepin community</p>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7 col-sm-9">
            <div class="card mat-card mat-card-elevated">
                <div class="card-header">
                    <h2>
                        <span class="material-icons me-2">person_add</span>
                        Sign Up
                    </h2>
                </div>

                <div class="card-body">
                    <form asp-page="/Account/Create/Index">
                        <input type="hidden" asp-for="Input.ReturnUrl" />

                        <div class="mat-form-field">
                            <label class="form-label" asp-for="Input.Username">Username</label>
                            <input class="form-control" placeholder="Choose a username" asp-for="Input.Username" autofocus>
                        </div>

                        <div class="mat-form-field">
                            <label class="form-label" asp-for="Input.Email">Email Address</label>
                            <input type="email" class="form-control" placeholder="Enter your email" asp-for="Input.Email">
                        </div>

                        <div class="mat-form-field">
                            <label class="form-label" asp-for="Input.Password">Password</label>
                            <input type="password" class="form-control" placeholder="Create a secure password" asp-for="Input.Password" autocomplete="new-password">
                        </div>
                        
                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn mat-button mat-button-primary" name="Input.Button" value="create">
                                <span class="material-icons me-1">person_add</span>
                                Create Account
                            </button>
                        </div>
                        
                        <div class="d-flex gap-2 justify-content-center">
                            <button class="btn mat-button mat-button-secondary" name="Input.Button" value="cancel">
                                <span class="material-icons me-1">close</span>
                                Cancel
                            </button>
                            <button class="btn mat-button mat-button-text" name="Input.Button" value="login">
                                <span class="material-icons me-1">login</span>
                                Sign In Instead
                            </button>
                        </div>
                    </form>
                </div>
                
                <div class="card-footer text-center">
                    <small class="mat-text-muted">
                        By creating an account, you agree to our Terms of Service and Privacy Policy.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>